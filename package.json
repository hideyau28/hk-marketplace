{
  "name": "hk-marketplace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3012",
    "dev:local": "next dev -p 3012",
    "dev:bootstrap": "bash scripts/dev-db-bootstrap.sh",
    "stripe:listen": "stripe listen --forward-to http://localhost:3012/api/stripe/webhook",
    "stripe:trigger:checkout": "stripe trigger checkout.session.completed",
    "postinstall": "prisma generate",
    "build": "DATABASE_URL=postgresql://localhost:5432/placeholder TURBOPACK=0 next build",
    "start": "next start -p 3012",
    "lint": "eslint",
    "prebuild": "node scripts/assert-single-app-root.mjs",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:seed": "npx --yes tsx scripts/seed-products.ts",
    "db:health": "node scripts/db-healthcheck.mjs",
    "smoke": "bash scripts/smoke-store-settings.sh && bash scripts/smoke-orders.sh",
    "smoke:payments": "bash scripts/smoke-payments.sh",
    "smoke:prod": "bash scripts/prod-smoke.sh",
    "smoke:local": "bash scripts/smoke-local.sh",
    "taskpkg": "bash scripts/taskpkg.sh",
    "provision": "bash scripts/provision-site.sh",
    "ci:build": "npx prisma generate && npm run build",
    "ci:smoke": "BASE=http://localhost:3012 bash scripts/smoke-store-settings.sh && BASE=http://localhost:3012 bash scripts/smoke-orders.sh",
    "ci:verify": "bash scripts/ci-verify-head.sh",
    "verify:local": "bash scripts/verify-local.sh",
    "verify:all": "npm run verify:local && npm run ci:verify"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "cloudinary": "^2.9.0",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "framer-motion": "^12.29.0",
    "jose": "^6.1.3",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "next-cloudinary": "^6.17.5",
    "pg": "^8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "recharts": "^3.7.0",
    "stripe": "^20.2.0",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "prisma": "^7.3.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
