{
  "name": "hk-marketplace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3012",
    "build": "next build",
    "start": "next start -p 3012",
    "lint": "eslint",
    "prebuild": "node scripts/assert-single-app-root.mjs",
    "smoke": "bash scripts/smoke-store-settings.sh",
    "smoke:prod": "bash scripts/prod-smoke.sh",
    "ci:build": "npx prisma generate && npm run build",
    "ci:smoke": "BASE=http://localhost:3012 bash scripts/smoke-store-settings.sh",
    "ci:verify": "bash scripts/ci-verify-head.sh",
    "verify:local": "bash scripts/verify-local.sh",
    "verify:all": "npm run verify:local && npm run ci:verify"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "clsx": "^2.1.1",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.563.0",
    "next": "16.1.4",
    "pg": "^8.17.2",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.16.0",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "prisma": "^7.3.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "prisma": {
    "schema": "prisma/schema.prisma"
  }
}
