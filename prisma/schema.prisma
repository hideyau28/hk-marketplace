generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model StoreSettings {
  id             Int      @id @default(1)
  storeName      String
  tagline        String
  returnsPolicy  String?
  shippingPolicy String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model IdempotencyKey {
  id          String   @id @default(cuid())
  key         String
  route       String
  method      String
  requestHash String
  status      Int
  responseJson Json
  createdAt   DateTime @default(now())

  @@unique([key, route, method])
  @@index([createdAt])
}
